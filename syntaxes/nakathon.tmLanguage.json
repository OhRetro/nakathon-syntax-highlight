{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Nakathon",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.nakathon",
				"match": "\\b(if|while|for|return|var|const|temp|func)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.nakathon",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.nakathon",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.nakathon",
			"match": "\\b\\d+(\\.\\d+)?\\b"
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.math.nakathon",
					"match": "+|-|*|/|**|%"
				}
			]
		},
		"conditional_operators": {
			"patterns": [
				{
					"name": "keyword.operator.comparison.nakathon",
					"match": "==|!=|<=|>=|<|>|&&|\\\\"
				}
			]
		}
	},
	"scopeName": "source.nkt"
}